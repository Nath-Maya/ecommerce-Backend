<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Home</title>
</head>

<body>
   <div>
      <h1>Bienvenido !</h1>
      {{#each user}}
      <p>{{user.name}}</p>
      <p>{{user.email}}</p>
      <p>{{user.rol}}</p>
      {{/each}}
      <h3><a href="/session/logout">Cerrar sesi√≥n</a></h3>
   </div>
   <h1>Lista de productos</h1>
   {{#each products}}
   <div class="card-product">
      <h2>{{this.title}}</h2>
      <p>{{this._id}}</p>
      <p> {{this.description}} </p>
      <p> {{this.price}} </p>
      <p> {{this.category}} </p>
      <p> {{this.stock}} </p>
      <img src="{{this.image}}" alt="" />
      <button class="btn-addCart" data-product-id="{{this._id}}">Agregar al carrito</button>
      <a href="/product/{{this._id}}">Ver detalles</a>
   </div>
   {{/each}}
</body>

</html>